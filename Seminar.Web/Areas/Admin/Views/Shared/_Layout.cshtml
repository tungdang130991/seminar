<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Html.Raw(ViewBag.Title) - Novate.Web</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/bootstrap.min.css" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="header">
        @*begin header html*@
        @*by trungnp at 07/09/2019*@
        @*Modify: ThangTC 12/09/2019*@
        <table cellpadding="0" cellspacing="0" height="66" width="100%">
            <tbody>
                <tr>
                    <td valign="bottom" width="325">
                        <img src="~/images/Menu/header_logo.gif" />
                    </td>
                    <td align="right">
                        <div id="login">
                            @*ログイン： @Sesion.Username*@
                            ログイン：
                            |
                            <a href="Logout-Path">ログアウト</a>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="left-content">
        @*begin menu html*@
        @*by trungnp at 04/09/2019*@
        @*Modify: ThangTC 12/09/2019*@
        <nav class="left_sidebar">
            @*begin menu_seminar_management*@
            <div id="menu_seminar_management">
                <div class="tit_menu_seminar_management "><div class="tit_text">一括管理メニュー</div></div>
                <div class="menu_bg">
                    <ul>
                        <li class="menu_text"><a href="#">セミナー検索</a></li>
                        <li class="line"></li>
                        <li class="menu_text"><a href="#">セミナー新規登録</a></li>
                        <li class="line"></li>
                        <li class="menu_text"><a href="#">タグ管理</a></li>
                        <li class="line"></li>
                    </ul>
                </div>
                <div class="menu_footer"></div>
            </div>
            @*begin menu_product_management*@
            <div id="menu_product_management">
                <div class="tit_menu_product_management"><div class="tit_text">商品マスタ管理</div></div>
                <div class="menu_bg">
                    <ul>
                        <li class="menu_text"><a href="#">バナー画像管理</a></li>
                        <li class="line"></li>
                        <li class="menu_text"><a href="#">資料請求設定</a></li>
                        <li class="line"></li>
                    </ul>
                </div>
                <div class="menu_footer"></div>
            </div>
            @*begin menu_system_management*@
            <div id="menu_system_management">
                <div class="tit_menu_system_management"><div class="tit_text">システム管理</div></div>
                <div class="menu_bg">
                    <ul>
                        <li class="menu_text"><a href="#">拠点マスタ管理</a></li>
                        <li class="line"></li>
                        <li class="menu_text"><a href="#">営業日マスタの設定</a></li>
                        <li class="line"></li>
                        <li class="menu_text"><a href="#">システム利用者管理</a></li>
                        <li class="line"></li>
                        <li class="menu_text">
                            <a href="#">講座マスタ管理</a>
                            <ul>
                                <li class="menu_text"><a href="#">講座大分類</a></li>
                                <li class="menu_text"><a href="#">講座中分類</a></li>
                                <li class="menu_text"><a href="#">講座小分類</a></li>
                            </ul>
                        </li>
                        <li class="line"></li>
                    </ul>
                </div>
                <div class="menu_footer"></div>
            </div>
            @*begin menu_system_authentication*@
            <div id="menu_system_authentication">
                <div class="tit_menu_system_authentication"><div class="tit_text">システム認証</div></div>
                <div class="menu_bg">
                    <ul>
                        <li class="menu_text"><a href="#">PowerCMS に接続</a></li>
                        <li class="line"></li>
                    </ul>
                </div>
                <div class="menu_footer"></div>
            </div>
        </nav>
    </div>

    <div class="right-content">
        <div class="container-fluid" style="padding-left: 0px;">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                @RenderBody()
            </div>
        </div>
    </div>

    @*<footer id="footer">
            <hr />
            <p>&copy; Human Academy Co., Ltd. All Rights Reserved.</p>
        </footer>*@

    @RenderSection("Scripts", required: false)
</body>
</html>
